<%- include('partials/header', { title: 'Kết quả tìm kiếm' }) %>

    <h1>Kết quả tìm kiếm cho "<%= keyword %>"</h1>

    <% if (jobs && jobs.length> 0) { %>
        <ul>
            <% jobs.forEach(job=> { %>
                <li>
                    <h3>
                        <%= job.title %>
                    </h3>
                    <p><strong>Địa điểm:</strong>
                        <%= job.location %>
                    </p>
                    <p><strong>Loại:</strong>
                        <%= job.employmentType %>
                    </p>
                    <p><strong>Lương:</strong>
                        <%= job.salary %> VND
                    </p>
                    <a href="/api/jobs/<%= job._id %>">Xem chi tiết</a>
                </li>
                <% }) %>
        </ul>
        <% } else { %>
            <p>Không tìm thấy công việc nào phù hợp với từ khóa "<%= keyword %>".</p>
            <% } %>

                <a href="/">← Quay về trang chủ</a>

                <%- include('partials/footer') %>